{
  "name": "shopify-taxonomy-mapper",
  "version": "1.0.0",
  "description": "HTTP API for mapping Amazon categories and product titles to Shopify's official taxonomy using Amazon Nova Lite",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "bun run build && bun --watch src/server.ts",
    "start": "bun run build && bun src/server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "shopify",
    "taxonomy",
    "category-mapping",
    "amazon",
    "nova-lite",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.927.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
